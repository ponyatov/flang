# Unix-style newlines with a newline ending every file
[*]
end_of_line          = lf
insert_final_newline = true
charset              = utf-8
tab_width            = 4
indent_size          = 4
indent_style         = space
max_line_length      = 80

[*.fs*]
fsharp_multiline_bracket_style = stroustrup

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
